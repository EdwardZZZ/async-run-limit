{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir":"./src",
        "outDir":"./lib",
        "watch":false,
        "declaration": true,
        "alwaysStrict": true,
        "removeComments": true,
        "preserveWatchOutput": true,
        "experimentalDecorators": true
    },
    "include":[
        "./src/**/*"
    ],
    "exclude":[
        "./lib/**/*"
    ]
}